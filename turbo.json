{
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "VERCEL_URL",
        "NODE_ENV",
        "DATABASE_URL",
        "GITHUB_ID",
        "GITHUB_SECRET",
        "UPLOADTHING_SECRET",
        "UPLOADTHING_APP_ID",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL"
      ]
    },
    "topo": {
      "dependsOn": ["@repo/prisma#db:generate", "^topo"]
    },
    "db:generate": {
      "outputs": ["../../node_modules/.prisma/**"],
      "outputMode": "new-only"
    },
    "db:deploy": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "//#format-root": {
      "dependsOn": ["^topo"],
      "outputMode": "new-only"
    },
    "format": {
      "outputMode": "new-only"
    },
    "lint": {
      "outputs": ["node_modules/.cache/.eslintcache"],
      "dependsOn": ["^topo"]
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "test": {
      "dependsOn": ["^topo"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "dependsOn": ["db:generate"],
      "persistent": true,
      "cache": false
    },
    "seed": {
      "dependsOn": ["db:generate"],
      "cache": false
    }
  }
}
