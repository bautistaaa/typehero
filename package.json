{
  "name": "typehero",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dl-monaco": "tsx scripts/dl-monaco.ts",
    "format": "turbo format format-root --continue -- --cache",
    "format-root": "prettier \"**/*.{ts,tsx,md,mdx,json}\" \"!apps/**\" \"!packages/**\" --check",
    "format:fix": "turbo format format-root --continue -- --write --cache",
    "postinstall": "pnpm dl-monaco",
    "lint": "turbo lint --continue -- --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "lint-staged": "lint-staged",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "prepare": "husky install",
    "refresh": "pnpm reset && pnpm prisma db seed",
    "reset": "prisma db push --force-reset",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "shell-quote": "^1.8.1",
    "tsx": "^3.12.7",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  },
  "packageManager": "pnpm@8.6.9",
  "pnpm": {
    "patchedDependencies": {
      "next-auth@4.22.1": "patches/next-auth@4.22.1.patch",
      "@monaco-editor/react@4.5.1": "patches/@monaco-editor__react@4.5.1.patch",
      "monaco-vim@0.4.0": "patches/monaco-vim@0.4.0.patch"
    }
  }
}
