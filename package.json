{
  "name": "typehero",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "postinstall": "prisma generate && pnpm dl-monaco -w web",
    "lint": "turbo lint",
    "reset": "prisma db push --force-reset",
    "format": "turbo format",
    "refresh": "pnpm reset && pnpm prisma db seed",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "^1.10.12",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,css}": "prettier --write"
  },
  "packageManager": "pnpm@8.6.9",
  "pnpm": {
    "patchedDependencies": {
      "next-auth@4.22.1": "patches/next-auth@4.22.1.patch",
      "@monaco-editor/react@4.5.1": "patches/@monaco-editor__react@4.5.1.patch",
      "monaco-vim@0.4.0": "patches/monaco-vim@0.4.0.patch",
      "lucide-react@0.260.0": "patches/lucide-react@0.260.0.patch"
    }
  }
}
